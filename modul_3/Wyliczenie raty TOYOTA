   "source": [
    "# Defining the function to calculate the leasing installment\n",
    "def calculate_leasing_installment(car_value):\n",
    "    # Fixed values\n",
    "    period = 60  # months\n",
    "    down_payment = 0  # Initial payment\n",
    "    buyout = 0.01  # Buyout after the leasing period (1%)\n",
    "    insurance_gap = 129.19  # GAP insurance\n",
    "    registration_cost = 8.54  # Registration cost\n",
    "\n",
    "    # Reference values\n",
    "    ref_car_value = 130400  # The car value for which we know the installment\n",
    "    ref_installment_value = 2705.48  # The known installment\n",
    "\n",
    "    # We need to remove the insurance and registration cost from both the known installment and the one we are going to calculate, because they are already known and are a constant.\n",
    "    ref_base_installment_value = ref_installment_value - insurance_gap - registration_cost\n",
    "\n",
    "    # Now we calculate the base installment for our specific car value. We assume a linear relation between the installment and the car value.\n",
    "    base_installment = (car_value / ref_car_value) * ref_base_installment_value\n",
    "\n",
    "    # Now we add back the insurance and registration cost.\n",
    "    total_installment = base_installment + insurance_gap + registration_cost\n",
    "\n",
    "    return total_installment\n",
    "\n",
    "\n",
    "# Now, let's use this function.\n",
    "\n",
    "# Asking the user for a car value\n",
    "user_car_value = float(input(\"Please, enter the car value: \"))\n",
    "\n",
    "# Calculating and printing the installment\n",
    "user_installment = calculate_leasing_installment(user_car_value)\n",
    "print(f\"The leasing installment for a car of value {user_car_value} is: {user_installment}\")"
   ]
  }
