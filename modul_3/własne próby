    "import datetime\n",
    "import time\n",
    "\n",
    "# Zielona data i godzina - zmień na wartość, która jest celem odliczania\n",
    "target_datetime = datetime.datetime(2025, 2, 20, 15, 00, 00)\n",
    "\n",
    "while True:\n",
    "    current_datetime = datetime.datetime.now()\n",
    "    # Obliczanie różnicy między bieżącym a celem\n",
    "    difference = target_datetime - current_datetime\n",
    "    # Wypisanie pozostałego czasu\n",
    "    hours, remainder = divmod(difference.seconds, 3600)\n",
    "    minutes, seconds = divmod(remainder, 60)\n",
    "    \n",
    "    print(f'Pozostało: {difference.days} dni, {hours} godzin, {minutes} minut and {seconds} sekund.')\n",
    "    \n",
    "    # Czekanie przez minutę zanim nastąpi kolejne odliczanie\n",
