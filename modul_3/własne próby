   "source": [
    "import time\n",
    "from datetime import datetime, timedelta\n",
    "\n",
    "# Campiść konkretną datę i godzinę\n",
    "target_date = datetime(2025, 2, 20, 15, 0, 0)\n",
    "\n",
    "while True:\n",
    "    # Oblicz różnicę czasu\n",
    "    time_difference = target_date - datetime.now()\n",
    "\n",
    "    # Różnica czasu nie może być ujemna\n",
    "    if time_difference < timedelta(0):\n",
    "        print(\"Odliczanie zakończone.\")\n",
    "        break\n",
    "\n",
    "    # Wypisz godziny, minuty i sekundy\n",
    "    hours, remainder = divmod(time_difference.seconds, 3600)\n",
    "    minutes, seconds = divmod(remainder, 60)\n",
    "\n",
    "    print(f\"Pozostało: {hours} godzin, {minutes} minut, {seconds} sekund.\")\n",
    "    \n",
    "    # Czekaj na kolejną sekundę\n",
    "    time.sleep(1)"
   ]
  },
