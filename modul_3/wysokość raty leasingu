    "# Assuming the cost of car, term period, final payment, GAP insurance & registration cost are in the same units, and all interest calculations are linear.\n",
    "# The calculation formula is assuming that the monthly lease rate depends linearly on the initial car value.\n",
    "\n",
    "\n",
    "# The initial values for the more expensive car\n",
    "expensive_car_value = 130400\n",
    "expensive_car_monthly_rate = 2705.48\n",
    "GAP_insurance = 129.19\n",
    "registration_cost = 8.54\n",
    "\n",
    "# The cost of expensive car without GAP insurance and registration cost\n",
    "expensive_car_base_rate = expensive_car_monthly_rate - GAP_insurance - registration_cost\n",
    "\n",
    "# A cheaper car with the same lease conditions\n",
    "cheaper_car_value = 126000\n",
    "\n",
    "# Calculation of the lease installment for a cheaper car\n",
    "cheaper_car_monthly_rate = expensive_car_base_rate * (cheaper_car_value / expensive_car_value)\n",
    "\n",
    "# Adding GAP insurance and registration cost\n",
    "total_cheaper_car_monthly_rate = cheaper_car_monthly_rate + GAP_insurance + registration_cost\n",
    "\n",
    "total_cheaper_car_monthly_rate"
   ]
  }
